<header class="container-fluid">
    <div id="headerRow" class="row justify-content-between mt-3">
        <div id="title" class="col-2 ml-5">
            <h1>Fest Gangs</h1>
        </div>
        <div class="col-4 mt-3">
            <form>
                <div class="row">
                    <div class="col-8 mr-0 pr-0">
                        <input id="search" type="text" class="form-control" placeholder="Buscar">
                    </div>
                    <div class="col ml-0 pl-0">
                        <select name="filter" id="filterSearch" class="form-control">
                            <option value="artist">Por artista</option>
                            <option value="location">Por ubicación</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2 pl-4">
            <p><%= user.name %></p>
            <button id="cerrarSesion">Cerrar sesión</button>
        </div>
    </div>
</header>