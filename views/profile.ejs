<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <%- include('./partials/header.ejs') %>

    <%- include('./partials/nav.ejs') %>

    <script src="/js/profile/profileDetails.js" defer></script>
    <script src="/js/profile/edit.js" defer></script>

    <style>
        #photo {
            background-size: cover;
            background-position: center;
            height: 200px;
            width: 200px;
        }

        .container-centered .row{
            display: flex;
            justify-content: center;
        }

        .info a{
            font-size: 1rem;
        }
    </style>

    <main class="container-fluid mt-3">
        <div class="row" style="min-height: 500px;">
            <div class="col-6">
                <div class="container-fluid container-centered">
                    <div class="row">
                        <div class="rounded-circle profilePhoto" id="photo"></div>
                    </div>
                    <div class="row mt-2">
                        <p class="text-secondary fs-6"><a href="#">Editar</a> | <a href="#">Borrar</a></p>
                    </div>
                    <div class="row">
                        <p id="username"></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="info">
                    <h2 class="mt-2 d-flex">Sobre mí 
                        <span><a id="editBio" href="#" class="text-secondary ml-3">Editar</a></span>
                    </h2>
                    <p class="mt-3" id="bio"></p>
                    <hr>
                    <h2 class="mt-2">Artistas favoritos
                        <span><a id="editArtists" href="#" class="text-secondary ml-3">Editar</a></span>
                    </h2>
                    <p class="mt-3" id="favArtists"></p>
                    <hr>
                    <h2 class="mt-2">Géneros favoritos
                        <span><a id="editGenres" href="#" class="text-secondary ml-3">Editar</a></span>
                    </h2>
                    <p class="mt-3"  id="favGenres"></p>
                    <hr>
                </div>
            </div>
        </div>
    </main>
</body>

</html>