<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <%- include('../partials/nav.ejs') %>

    <script src="/js/group/groupForm.js" defer></script>

    <%

    function getZero(fecha){

        if(fecha < 10){
            return '0' + fecha;
        }else{
            return fecha;
        }
    }

    let fechaFormato = new Date(evento.date);
    let textoFecha = getZero(fechaFormato.getDate()) +
        '/' + getZero(fechaFormato.getMonth() + 1) + '/' + fechaFormato.getFullYear();

    %>

    <main class="container-fluid mt-3 ml-5">
        <div class="row">
            <div class="col-6" id="firstHalf">
                <div class="col-6 d-flex">
                    <div class="col-6">
                        <img
                        src="<%= '/eventFiles/' +  evento.id + '/cover.jpg' %>"
                        alt="<%= evento.title %>"
                        class="img-fluid img-thumbnail"
                        id="cover">
                    </div>
    
                    <div class="col ml-6">
                        <div class="row">
                            <h1><%= evento.title %></h1>
                        </div>
                        <div class="row mt-3">
                            <p><b>Fecha: </b><%= textoFecha %></p>
                        </div>
                    </div>
                </div>

    
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="row ml-3">
                            <div class="col-3">
                                <h3>Artista(s)</h3>
                                <p><%= evento.artist %></p>
                            </div>
                            <div class="col-3">
                                <h3>Ubicaci√≥n</h3>
                                <p class="text-nowrap">
                                    <%= evento.location %>, <%= evento.city %>, <%= evento.country %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>
</html>