<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs') %>

    <script src="/js/group/newGroup.js" defer></script>
    <script src="/js/event/showGroups.js" defer></script>
<!--     <script src="/js/group/joinGroup.js" defer></script> -->
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <%- include('../partials/nav.ejs') %>

    <%

    function getZero(fecha){

        if(fecha < 10){
            return '0' + fecha;
        }else{
            return fecha;
        }
    }

    let fechaFormato = new Date(evento.date);
    let textoFecha = getZero(fechaFormato.getDate()) +
        '/' + getZero(fechaFormato.getMonth() + 1) + '/' + fechaFormato.getFullYear();

    %>

    <main class="container-fluid mt-3 ml-5">
        <div class="row">
            <div class="col-6" id="firstHalf">
                <div class="col-12 d-flex">
                    <div class="col-4">
                        <img
                        src="<%= '/eventFiles/' +  evento.id + '/cover.jpg' %>"
                        alt="<%= evento.title %>"
                        class="img-fluid img-thumbnail"
                        id="cover">
                    </div>
    
                    <div class="col ml-6">
                        <div class="row text-nowrap text-truncate">
                            <h1><%= evento.title %></h1>
                        </div>
                        <div class="row mt-3">
                            <p><b>Fecha: </b><%= textoFecha %></p>
                        </div>
                        <p id="eventIdForShow" hidden><%= evento.id %></p>
                    </div>
                </div>

    
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="row ml-3">
                            <div class="col-6">
                                <h3>Artista(s)</h3>
                                <p><%= evento.artist %></p>
                            </div>
                            <div class="col-6">
                                <h3>Ubicación</h3>
                                <p>
                                    <%= evento.location %>, <%= evento.city %>, <%= evento.country %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-5" id="secondHalf">
                <div class="row">
                    <div id="groups" class="col"></div>
                </div>

                <div class="row mb-4">
                    <div id="newForm" class="col-12">
                        <form>
                            <h1>Grupo nuevo</h1>

                            <div class="form-group mt-3">
                                <label for="maxUsers">Número máximo de participantes</label>
                                <input type="number"
                                 class="form-control"
                                  name="maxUsers"
                                   id="maxUsers"
                                   min="1"
                                   max="50">    
                            </div>

<!--                             <div id="radioAccess" class="mt-4 d-flex justify-content-around">

                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="typeAccess" id="freeAccess">
                                    <label for="freeAccess" class="form-check-label">Entrada libre al grupo</label>
                                </div>
    
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="typeAccess" id="freeAccess">
                                    <label for="freeAccess" class="form-check-label">Pedir permiso al creador</label>
                                </div>
                            </div> -->

                            <input type="hidden" name="eventId" id="eventId" value="<%= evento.id %>">

                            <p id="message" class="text-danger mt-3"></p>

                        </form>

                        <button id="newButton" class="btn btn-primary mt-4">Crear grupo</button>

                    </div>
                </div>
            </div>
        </div>
    </main>

</body>
</html>