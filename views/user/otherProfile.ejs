<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/header.ejs') %>

    <%- include('../partials/nav.ejs') %>

    <script src="/js/user/otherProfile.js" defer></script>

    <style>
        #profilePic {
            background-size: cover;
            background-position: center;
            height: 200px;
            width: 200px;
        }

        .container-centered .row{
            display: flex;
            justify-content: center;
        }

        .info a{
            font-size: 1rem;
        }

        #username{
            font-size: 3rem;
        }
    </style>

    <main class="container-fluid mt-3">
        <div class="row" style="min-height: 500px;">
            <div class="col-6">
                <div class="container-fluid container-centered">
                    <div class="row">
                        <div class="rounded-circle" id="profilePic"></div>
                    </div>
                    <div class="row">
                        <p id="username"><%= user.name %></p>
                        <p id="userId" hidden><%= user.id %></p>
                    </div>

                </div>
            </div>
            <div class="col">
                <div class="info">
                    <h2 class="mt-2 d-flex">Sobre mí 
                    </h2>
                    <p class="mt-3" id="bio"><%= user.bio %></p>
                    <hr>
                    <h2 class="mt-2">Artistas favoritos
                    </h2>
                    <p class="mt-3" id="favArtists"><%= user.artists %></p>
                    <hr>
                    <h2 class="mt-2">Géneros favoritos
                    </h2>
                    <p class="mt-3"  id="favGenres"><%= user.genres %></p>
                    <hr>
                </div>
            </div>
        </div>

    </main>
</body>

</html>